{
  "_comment": "MCP Server Registry - Reference config for Vulcan MCP servers",
  "servers": {
    "desktop-control": {
      "description": "Physical Windows PC control",
      "location": "desktop_server/mcp_server.py",
      "transport": "stdio",
      "tools": ["mouse_move", "mouse_click", "type_text", "press_key", "get_screen_info", "start_recording", "stop_recording", "verify_visual_state"],
      "resources": ["vulcan://logs", "vulcan://status"]
    },
    "memory-vec": {
      "description": "Vector memory for RAG",
      "package": "chromadb",
      "install": "pip install chromadb",
      "port": 8770,
      "tools": ["memory_store", "memory_search", "memory_query"]
    },
    "google-drive": {
      "description": "Google Drive file sync",
      "reference": "https://github.com/wong2/mcp-gdrive-adapter",
      "package": "google-api-python-client",
      "install": "pip install google-api-python-client google-auth",
      "tools": ["drive_upload", "drive_download", "drive_list", "drive_sync"]
    },
    "cad-mcp": {
      "description": "CAD software control",
      "reference": "https://github.com/daobataotie/CAD-MCP",
      "note": "Reference only - we use thin adapters in desktop_server/com/",
      "tools": ["create_part", "modify_part", "export_step"]
    },
    "microsoft": {
      "description": "Microsoft 365 (Outlook, Calendar, OneDrive)",
      "reference": "https://github.com/elyxlz/microsoft-mcp",
      "install": "uvx --from git+https://github.com/elyxlz/microsoft-mcp.git microsoft-mcp",
      "env_required": ["MICROSOFT_MCP_CLIENT_ID"],
      "tools": ["get_emails", "send_email", "get_calendar", "create_event", "get_files", "search_files"],
      "note": "Requires Azure App registration - see apps/web/src/app/work/setup/page.tsx"
    },
    "tradingview-api": {
      "description": "TradingView realtime data, backtesting, alerts",
      "reference": "https://github.com/Mathieu2301/TradingView-API",
      "install": "npm install @mathieuc/tradingview",
      "language": "javascript",
      "tools": ["get_realtime_data", "backtest_strategy", "get_technical_analysis", "replay_mode"],
      "note": "Unofficial API - supports invite-only indicators"
    },
    "tradingview-webhooks": {
      "description": "TradingView webhook receiver for alerts",
      "reference": "https://github.com/robswc/tradingview-webhooks-bot",
      "install": "pip install flask",
      "language": "python",
      "tools": ["receive_alert", "execute_trade", "log_signal"],
      "note": "Framework for building trading logic from TV alerts"
    },
    "github-mcp": {
      "description": "Official GitHub MCP server",
      "reference": "https://github.com/github/github-mcp-server",
      "install": "npm install @github/mcp-server",
      "tools": ["create_issue", "create_pr", "search_repos", "get_actions"],
      "note": "Official GitHub integration"
    },
    "n8n-mcp": {
      "description": "Build n8n workflows via AI",
      "reference": "https://github.com/czlonkowski/n8n-mcp",
      "install": "npx n8n-mcp",
      "tools": ["create_workflow", "list_nodes", "execute_workflow"],
      "note": "545 automation nodes"
    },
    "claude-context": {
      "description": "Semantic code search for entire codebase",
      "reference": "https://github.com/zilliztech/claude-context",
      "install": "pip install claude-context",
      "tools": ["semantic_search", "find_code", "get_context"],
      "note": "RAG for codebases"
    }
  },
  "browser-automation": {
    "_comment": "For J2 Tracker and web scraping",
    "playwright": {
      "description": "üèÜ Microsoft browser automation",
      "reference": "https://github.com/microsoft/playwright-python",
      "install": "pip install playwright && playwright install chromium",
      "status": "INSTALLED",
      "tools": ["navigate", "click", "fill", "screenshot", "save_session"]
    },
    "crawlee": {
      "description": "Web scraping for AI/RAG",
      "reference": "https://github.com/apify/crawlee-python",
      "install": "pip install crawlee",
      "status": "INSTALLED",
      "tools": ["crawl", "extract", "parse_html", "export_data"]
    },
    "playwright-scraping": {
      "description": "Scraping examples with auth",
      "reference": "https://github.com/HasData/playwright-scraping",
      "install": "git clone (reference)",
      "tools": ["auth_handling", "error_management", "data_extraction"]
    }
  },
  "inventor-libs": {
    "_comment": "Python libraries for Autodesk Inventor automation",
    "PyInventor": {
      "description": "Inventor API wrapper (parametric)",
      "reference": "https://github.com/AndrewOriani/PyInventor",
      "install": "pip install pyinvent",
      "tools": ["create_part", "modify_params", "export_step"]
    },
    "InventorTools": {
      "description": "COM scripts for Inventor",
      "reference": "https://github.com/mickp/InventorTools",
      "install": "git clone (reference)",
      "tools": ["batch_export", "modify_parts", "get_bom"]
    }
  },
  "solidworks-libs": {
      "_comment": "Python libraries for SolidWorks automation",
      "solidwrap": {
        "description": "üèÜ RECOMMENDED: SolidWorks + PDM unified API",
        "reference": "https://github.com/SeanYeatts/SolidWrap",
        "install": "pip install solidwrap",
        "status": "INSTALLED",
        "tools": ["open_model", "export_step", "pdm_checkout", "pdm_checkin", "logging"]
      },
      "pySldWrap": {
        "description": "Full SolidWorks API wrapper via pywin32",
        "reference": "https://github.com/ThomasNeve/pySldWrap",
        "install": "pip install pySldWrap",
        "status": "INSTALLED",
        "tools": ["open_model", "modify_dimensions", "export_step", "get_features"]
      },
      "pySW": {
        "description": "Dimension extraction from drawings",
        "reference": "https://github.com/kalyanpi4/pySW",
        "install": "pip install pySW",
        "status": "INSTALLED",
        "tools": ["extract_dimensions", "get_tolerances", "modify_assembly"]
      },
      "SolidProxy": {
        "description": "COM connection examples",
        "reference": "https://github.com/Gautreaux/SolidProxy",
        "install": "git clone (reference)",
        "tools": ["com_connect", "api_examples"]
      },
      "SWPyMacros": {
        "description": "Macro collection for Python",
        "reference": "https://github.com/onuralpszr/SWPyMacros",
        "install": "git clone (reference)",
        "tools": ["macro_examples", "batch_processing"]
      }
    }
  },
  "patterns": {
    "adapter": "50-100 lines wrapping external package",
    "bridge": "Connects to MCP server or falls back to direct API",
    "no_cloning": "Never clone external repos - pip install + adapter"
  }
}
