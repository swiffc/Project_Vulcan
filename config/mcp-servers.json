{
  "_comment": "MCP Server Registry - Reference config for Vulcan MCP servers",
  "servers": {
    "desktop-control": {
      "description": "Physical Windows PC control",
      "location": "desktop_server/mcp_server.py",
      "transport": "stdio",
      "tools": ["mouse_move", "mouse_click", "type_text", "press_key", "get_screen_info", "start_recording", "stop_recording", "verify_visual_state"],
      "resources": ["vulcan://logs", "vulcan://status"]
    },
    "memory-vec": {
      "description": "Vector memory for RAG",
      "package": "chromadb",
      "install": "pip install chromadb",
      "port": 8770,
      "tools": ["memory_store", "memory_search", "memory_query"]
    },
    "google-drive": {
      "description": "Google Drive file sync",
      "reference": "https://github.com/wong2/mcp-gdrive-adapter",
      "package": "google-api-python-client",
      "install": "pip install google-api-python-client google-auth",
      "tools": ["drive_upload", "drive_download", "drive_list", "drive_sync"]
    },
    "cad-mcp": {
      "description": "CAD software control",
      "reference": "https://github.com/daobataotie/CAD-MCP",
      "note": "Reference only - we use thin adapters in desktop_server/com/",
      "tools": ["create_part", "modify_part", "export_step"]
    },
    "microsoft": {
      "description": "Microsoft 365 (Outlook, Calendar, OneDrive)",
      "reference": "https://github.com/elyxlz/microsoft-mcp",
      "install": "uvx --from git+https://github.com/elyxlz/microsoft-mcp.git microsoft-mcp",
      "env_required": ["MICROSOFT_MCP_CLIENT_ID"],
      "tools": ["get_emails", "send_email", "get_calendar", "create_event", "get_files", "search_files"],
      "note": "Requires Azure App registration - see apps/web/src/app/work/setup/page.tsx"
    },
    "tradingview-api": {
      "description": "TradingView realtime data, backtesting, alerts",
      "reference": "https://github.com/Mathieu2301/TradingView-API",
      "install": "npm install @mathieuc/tradingview",
      "language": "javascript",
      "tools": ["get_realtime_data", "backtest_strategy", "get_technical_analysis", "replay_mode"],
      "note": "Unofficial API - supports invite-only indicators"
    },
    "tradingview-webhooks": {
      "description": "TradingView webhook receiver for alerts",
      "reference": "https://github.com/robswc/tradingview-webhooks-bot",
      "install": "pip install flask",
      "language": "python",
      "tools": ["receive_alert", "execute_trade", "log_signal"],
      "note": "Framework for building trading logic from TV alerts"
    }
  },
  "solidworks-libs": {
      "_comment": "Python libraries for SolidWorks automation (pick one)",
      "pySldWrap": {
        "description": "Full SolidWorks API wrapper via pywin32",
        "reference": "https://github.com/ThomasNeve/pySldWrap",
        "install": "pip install pySldWrap",
        "tools": ["open_model", "modify_dimensions", "export_step", "get_features"]
      },
      "pySW": {
        "description": "Dimension extraction from drawings",
        "reference": "https://github.com/kalyanpi4/pySW",
        "install": "pip install pySW",
        "tools": ["extract_dimensions", "get_tolerances", "modify_assembly"]
      },
      "swtoolkit": {
        "description": "Quick script automation",
        "reference": "https://github.com/Glutenberg/swtoolkit",
        "install": "git clone + local",
        "tools": ["automate_workflow", "batch_export"]
      },
      "pySolidWorks": {
        "description": "FEA, DXF export, dimension mods",
        "reference": "https://github.com/mklanac/pySolidWorks",
        "install": "git clone + local",
        "tools": ["run_fea", "export_dxf", "modify_features"]
      }
    }
  },
  "patterns": {
    "adapter": "50-100 lines wrapping external package",
    "bridge": "Connects to MCP server or falls back to direct API",
    "no_cloning": "Never clone external repos - pip install + adapter"
  }
}
