  "bracing_systems": {
    "description": "Lateral bracing systems for structural steel frames",
    "reference": "AISC 360, Eurocode 3/8, GB 50017",
    "types": {
      "X_bracing": {
        "name": "X-Bracing (Cross Bracing)",
        "description": "Two diagonal members crossing in X-pattern, one in tension, one in compression",
        "applications": ["High-rise structures", "Industrial plants", "Equipment support frames", "Pipe racks"],
        "advantages": ["Maximum lateral stiffness", "Redundant load path", "Effective drift control"],
        "disadvantages": ["May limit interior space", "More material than other types"],
        "typical_angle_deg": {"min": 30, "max": 60, "optimal": 45},
        "connection_type": "Gusset plate at intersection and ends",
        "slenderness_limit_tension": 300,
        "slenderness_limit_compression": 200,
        "typical_members": ["L angles", "WT sections", "Double angles", "HSS tubes", "Rods (tension only)"],
        "design_notes": "One brace resists tension, other resists compression. Size for compression governs."
      },
      "V_bracing": {
        "name": "V-Bracing (Chevron Bracing)",
        "description": "Two diagonal members meeting at mid-span of beam forming inverted V",
        "applications": ["Buildings with openings", "Moderate height structures", "Bridge applications"],
        "advantages": ["Allows door/window openings", "Good aesthetic appearance", "Effective load distribution"],
        "disadvantages": ["Requires strong beam at apex", "Potential buckling issues at V-point"],
        "typical_angle_deg": {"min": 35, "max": 55, "optimal": 45},
        "connection_type": "Gusset plate at beam connection",
        "beam_requirements": "Must be designed for unbalanced brace forces",
        "typical_members": ["HSS tubes", "Wide flange", "Double angles"],
        "design_notes": "Beam at apex must resist vertical unbalanced force if braces buckle"
      },
      "inverted_V_bracing": {
        "name": "Inverted V-Bracing (Chevron)",
        "description": "V-pattern with apex at bottom, spreading to beam",
        "applications": ["Buildings requiring open ground floor", "Retail spaces", "Parking structures"],
        "advantages": ["Open space at base", "Architectural flexibility"],
        "disadvantages": ["Complex foundation connection", "Potential for soft story"],
        "typical_angle_deg": {"min": 35, "max": 55, "optimal": 45},
        "typical_members": ["HSS tubes", "Wide flange sections"]
      },
      "K_bracing": {
        "name": "K-Bracing",
        "description": "Diagonal members connected at mid-height of column forming K-shape",
        "applications": ["Large span structures (NOT seismic)", "Storage buildings"],
        "advantages": ["Space efficient", "Good for low-rise"],
        "disadvantages": ["NOT ALLOWED for seismic design", "Localized stress at column", "Potential column failure"],
        "restrictions": "PROHIBITED in SCBF/OCBF seismic systems per AISC 341",
        "typical_angle_deg": {"min": 30, "max": 50},
        "typical_members": ["Angles", "WT sections"],
        "design_notes": "Creates high inelastic demand at column - avoid for critical structures"
      },
      "diagonal_bracing": {
        "name": "Single Diagonal Bracing",
        "description": "Single diagonal member across bay",
        "applications": ["Light industrial", "Low-rise buildings", "Temporary structures"],
        "advantages": ["Simple design", "Minimum connections", "Low cost"],
        "disadvantages": ["Less redundancy", "Larger member sizes", "Alternating pattern needed"],
        "typical_angle_deg": {"min": 30, "max": 60, "optimal": 45},
        "connection_type": "Corner gusset plates",
        "typical_members": ["Single angle", "WT section", "HSS tube"],
        "design_notes": "Must be sized for both tension and compression in alternating bays"
      },
      "knee_bracing": {
        "name": "Knee Bracing",
        "description": "Short diagonal from column to beam near corner",
        "applications": ["Portal frames", "Clear span buildings", "Industrial sheds"],
        "advantages": ["Maximum clear height", "Simple connections", "Aesthetic"],
        "disadvantages": ["Lower stiffness than full bracing", "Moment frame behavior"],
        "typical_length_ratio": 0.15,
        "typical_members": ["Angles", "Channels", "HSS tubes"]
      },
      "horizontal_bracing": {
        "name": "Horizontal Bracing (Plan Bracing)",
        "description": "X or diagonal bracing in horizontal plane for diaphragm action",
        "applications": ["Roof systems", "Floor systems", "Transfer of lateral loads"],
        "types": {
          "roof_bracing": "Upper flange level of roof system",
          "floor_bracing": "Lower flange level or dedicated plane"
        },
        "typical_members": ["Angles", "Rods", "Flat bars"],
        "spacing_guidelines": "Per AISC design requirements for diaphragm stiffness"
      }
    },
