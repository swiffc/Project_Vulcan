# Desktop Server Environment Variables
# Copy this file to .env and fill in your values

# Token encryption for Microsoft 365 auth
TOKEN_STORE_PATH=./data/tokens.enc
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Orchestrator connection (use Tailscale IP if using VPN)
ORCHESTRATOR_URL=http://100.x.x.x:8080  # Replace with Render Tailscale IP
# Or use public URL: https://vulcan-orchestrator.onrender.com

# Optional: Tailscale configuration
TAILSCALE_AUTHKEY=tskey-auth-...  # Only if running Tailscale on desktop server

# Optional: Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/desktop_server.log
